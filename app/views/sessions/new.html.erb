<style>

  
  #signup {
    text-decoration :none;
  }
  .mylogin{
    width:145px;
  }
  .LT{
    padding-top: 10px;
    float: left;
    text-align: left;
  }
</style>
<script>
      function activateModel(){
          $('#myModal').modal('show')
      }
</script>
<%= render '/home/form_nav' %>
    <div class="center">
    <h1>아이디/비밀번호 확인</h1>
    <div class="row mt-5">
      
      <div class="container">
        <% provide(:title, "Log in") %>
    
        <h3 style="#fc0019;"><%= flash[:danger]%></h3>
        <%= form_for(:session, url: login_path) do |f| %>
        <div class="row mt-5">
            <div class="col-md-3 LT"><center>  <%= f.label :이메일 ,class: 'label' %></center></div>
            <div class="col-md-9">
              <%= f.email_field :email, class: 'form-control' %>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3 LT"><center><%= f.label :비밀번호,class: 'label' %></center></div>
            <div class="col-md-9">
                <%= f.password_field :password, class: 'form-control' %>
            </div>
        </div>
        <div class="row mt-5 mx-5">
            <div class="col" style="text-align:right;">
              <%= f.submit "로그인", class: "mylogin btn btn-warning submit-btn" %>
            </div>
            <div class="col"  style="text-align:left;margin-top:20px;">
                <%= link_to "일반 회원 가입", '/users/new',class: "btn btn-secondary"%>
            </div>
        </div>
        <% end %>
      </div>
      
    </div>
  </div>