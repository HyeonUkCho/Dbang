                <div class="container row" style="margin-top:70px; margin-bottom:20px">
                    <div class="col-md-2" id=manImage style="width:50px; height:70px; text-align:center; padding:0; padding-top:10px">
                        <%= image_tag "man.png", width: 70, height: 70 %>
                    </div>
                    <div class="col-md-10" style="padding:0;">
                        <%= comment.commenter %><br><br>
                        <%= comment.body %>
                        <% if !current_user.nil? %>
                            <% if comment.user_id == current_user.id %>
                                <%= link_to '삭제', [comment.house,comment], method: :delete, data: { confirm: 'Are you sure'}%>
                            <%else%>
                                
                            <% end %>
