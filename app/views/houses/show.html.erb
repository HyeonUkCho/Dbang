                <div class="container row" style="width:100%; padding-top:15px;">
                   
                    <div class="col" id=manImage style="width:50px; height:70px; text-align:center; padding:0; padding-top:10px">
                        <%= image_tag "man.png", width: 70, height: 70 %>
                    </div>
                    
                    <div class="col" style=" padding:0;">
                        <%= f.text_area :body, cols: 70, rows: 4 %>
                        <div style="color:#ff002e;"><strong><%= flash[:notice_login]%></strong></div>
                        
                    </div>
                    
                    <div class="col" style=" padding:0; margin-left:15;">
                        <%= f.submit '댓글 등록', class: 'btn btn-secondary',:style => 'height:90%; width:100%;'%>
                    </div>
                </div>
                <% end %>
                <% @house.comments.each do |comment| %> 
